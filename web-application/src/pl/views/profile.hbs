{{#if user}}
    <div class="container p-3 my-3 bg-dark text-white">
        <div class="jumobotron">
            <h5 class="text-center">{{_username}}</h5>
            <p>Name: {{_firstName}} {{_lastName}}</p>
            <p>Birth date: {{_dateOfBirth}}</p>
            <p>Height: {{_height}} cm</p>
            <p>Weight: {{_weight}} kg</p>
            <div class="row">
                <form action="/activities/by/{{_username}}" method="GET">
                    <button class="btn btn-success" type="submit">View Activities</button>
                </form>
                {{#if _profileAuth}}
                    <form action="/profile/manageProfile/{{_username}}" method="GET">
                        <button class="btn btn-success" type="submit">Manage Profile</button>
                    </form>
                    <form action="/profile/deleteProfile/{{_username}}" method="POST">
                        <button class="btn btn-success" type="submit">Delete Profile</button>
                    </form>
                {{/if}}    
            </div>
        </div>
    </div>
{{else}}
    <h1>No profile with that username</h1>
{{/if}}