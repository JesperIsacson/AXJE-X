<div class="container">
    <div class="row">
        <div class="col-md-8">

            <h1 class="my-4">Activities</h1>
            {{!#if isLoggedIn}}
            <div class="container" id="container">
                <div class="jumbotron" id="jumbotron">
                    <h1 class="display-4">Create Activity</h1>
                    <hr class="my-4">
                    {{!/activity/create}}
                    <a class="btn btn-primary btn-lg" href="/activities/create" role="button">Create</a>
                </div>
                {{!/if}}
                {{!#each activity}}
                <div class="card mb-4">
                    <div class="card-body">
                        <h2 class="card-title">{{!title}}</h2>
                        <p class="card-text">{{!content}}</p>
                        {{!activity/id}}
                        <a href="#" class="btn btn-primary">Read more</a>
                        {{!#if../isLoggedIn}}
                        {{!activity/edit/id}}
                        <a href="#" class="btn btn-secondary">Edit</a>
                        {{!activity/delete/id}}
                        <form action="#" method="POST">
                            <input type="submit" value="Delete" class="btn btn-secondary">
                        </form>
                        {{!/if}}
                    </div>
                    <div class="card-footer text-muted">
                        Posted on: {{!datePosted}} by
                        {{!user/id}}
                        <a href="#">User</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>