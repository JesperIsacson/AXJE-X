    <link rel="stylesheet" href="/CSS/main.css">
</head>


<body class="bg">

    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <a class="navbar-brand text-white" href="/">Sportify</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-white" href="/">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/activities">Activities</a>
                </li>
                {{#if isLoggedIn.length}}
                <li class="nav-item">
                    <a class="nav-link text-white" href="/profile">Profile</a>
                </li>
                {{/if}}
                {{#if isLoggedIn.length}}
                <li class="nav-item">
                    <form action="/login/logout" method="POST">
                        <input type="hidden" name="_csrf" value="{{csrfToken}}">
                        <button class="nav-link button-borderless bg-dark" id="logoutBtn" type="submit">Logout</button>
                    </form>
                </li>
                {{else}}
                <li class="nav-item">
                    <a class="nav-link text-white" href="/login">Login</a>
                </li>
                {{/if}}
                {{#if isLoggedIn.length}}
                {{else}}
                <li class="nav-item">
                    <a class="nav-link text-white" href="/register">Register</a>
                </li>
                {{/if}}
            </ul>
        </div>
    </nav>
    {{{body}}}
