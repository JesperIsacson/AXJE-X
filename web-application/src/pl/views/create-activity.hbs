<h1>Create Activity</h1>

{{#if validationErrors.length}}
<p>Errors:</p>
<ul>
    {{#each validationErrors}}
    <li>{{this}}</li>
    {{/each}}
</ul>
{{/if}}

<div class="col-md-3 col-sm-12">
    <div class="createactivity-form">
        <form action="/activities/create" method="POST">
            <fieldset>
                <label for="title">Title</label><br>
                <input type="text" id="input-title" name="title" placeholder="Title" class="form-input"><br>
                <label for="location">Location</label><br>
                <input type="text" id="input-location" name="title" placeholder="Location" class="form-input"><br>
                <label for="date">Date</label><br>
                <input type="text" id="input-date" name="date" placeholder="YYYY-MM-DD" class="form-input"><br>
                <label for="time">Time</label><br>
                <input type="text" id="input-time" name="time" placeholder="HH:MM" class="form-input"><br>
                <label for="description">Description</label><br>
                <textarea name="description" id="input-content" cols="20" rows="10" type="text"
                    class="form-input"></textarea><br><br>
                <input type="submit" value="Create Activity" class="btn btn-primary">
            </fieldset>
        </form>
    </div>
</div>